<p id="notice"><%= notice %></p>

<h1>Rosters</h1>

<form action="/rosters" method="get">
  <label>Search</label>
  <input type="text" name="search" />
  <input type="submit" />
</form>

<table>
  <thead>
    <tr>
      <th>First name
        <button><%= link_to "v", "/rosters/order/desc" %></button>
        <button><%= link_to "^", "/rosters/order/asc" %></button></th>
      <th>Last name</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rosters.each do |roster| %>
      <tr>
        <td><%= roster.first_name %></td>
        <td><%= roster.last_name %></td>
        <td><%= roster.role %></td>
        <td><%= link_to 'Show', roster %></td>
        <td><%= link_to 'Edit', edit_roster_path(roster) %></td>
        <td><%= link_to 'Destroy', roster, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Roster', new_roster_path %>
